
<%- include("../../views/partials/admin/header") %>
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Order Details</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 font-sans">
  <div class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold mb-8 text-center text-gray-800">Order Details</h1>

    <div class="bg-white shadow-md rounded-lg overflow-hidden mb-8">
      <div class="p-6">
        <h2 class="text-xl font-semibold mb-4 text-gray-700">Customer Information</h2>
        <p class="text-gray-600"><span class="font-medium">Name:</span> <%= orders.user.name %></p>
        <p class="text-gray-600 mt-2"><span class="font-medium">Total Price:</span> $<%= orders.totalPrice.toFixed(2) %></p>
      </div>
    </div>

    <div class="bg-white shadow-md rounded-lg overflow-hidden mb-8">
      <div class="p-6">
        <h2 class="text-xl font-semibold mb-4 text-gray-700">Shipping Address</h2>
        <p class="text-gray-600"><%= orders.address.phone %></p>
        <p class="text-gray-600"><%= orders.address.street %></p>
        <p class="text-gray-600"><%= orders.address.city %>, <%= orders.address.state %> <%= orders.address.pincode %></p>
        <p class="text-gray-600"><%= orders.address.addressLine1 %></p>
      </div>
    </div>

    <div class="bg-white shadow-md rounded-lg overflow-hidden">
      <div class="p-6">
        <h2 class="text-xl font-semibold mb-4 text-gray-700">Products</h2>
        <div class="overflow-x-auto">
          <table class="w-full text-left border-collapse">
            <thead>
              <tr class="bg-gray-100">
                <th class="py-4 px-6 font-semibold text-sm text-gray-600 border-b">Product</th>
                <th class="py-4 px-6 font-semibold text-sm text-gray-600 border-b">volume</th>
                <th class="py-4 px-6 font-semibold text-sm text-gray-600 border-b">Quantity</th>
                <th class="py-4 px-6 font-semibold text-sm text-gray-600 border-b">Price</th>
                <th class="py-4 px-6 font-semibold text-sm text-gray-600 border-b">Total</th>
              </tr>
            </thead>
            <tbody>
              <% orders.orderedItems.forEach(item => { %>
                <tr class="hover:bg-gray-50">
                  <td class="py-4 px-6 border-b">
                    <div class="flex items-center">
                      <img src="/uploads/re-image/<%= item.product.productImage[0] %>" alt="<%= item.product.name %>" class="w-16 h-16 object-cover rounded mr-4">
                      <span class="text-sm text-gray-700"><%= item.product.productName %></span>
                     
                    </div>
                  </td>
                  <td class="py-4 px-6 border-b text-sm text-gray-600"><%= item.volume %></td>
                  <td class="py-4 px-6 border-b text-sm text-gray-600"><%= item.quantity %></td>
                  <td class="py-4 px-6 border-b text-sm text-gray-600">$<%= item.price.toFixed(2) %></td>
                  <td class="py-4 px-6 border-b text-sm text-gray-600">$<%= (item.quantity * item.price).toFixed(2) %></td>
                  
                </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</body>
</html>
