<style>

body {
    background-image: linear-gradient(to right top, #000000, #000000, #000000, #000000, #000000);
    overflow: hidden;
    font-family: 'Poppins', sans-serif;
}

.wrapper {
    padding: 4% 0;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
}

.container {
    padding: 8% 0;
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 100%;
}

.form-signin {
    max-width: 400px;
    width: 100%;
    margin: 0 auto;
    background-color: #ffffff;
    padding: 30px 40px;
    border-radius: 20px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease-in-out;
}

.form-signin:hover {
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.2);
}

.form-signin .form-heading {
    font-size: 24px;
    font-weight: bold;
    text-align: center;
    margin-bottom: 20px;
    color: #051937;
}

.form-signin input {
    width: 100%;
    margin-bottom: 20px;
    padding: 12px 20px;
    border-radius: 8px;
    border: 1px solid #ccc;
    background-color: #f9f9f9;
    box-shadow: inset 0 1px 3px rgba(0, 0, 0, 0.05);
    transition: all 0.2s ease-in-out;
}

.form-signin input:focus {
    border-color: #33023d;
    background-color: #fff;
    outline: none;
    box-shadow: 0 0 5px rgba(51, 2, 61, 0.3);
}

.form-signin .checkbox {
    display: flex;
    align-items: center;
    margin-bottom: 30px;
    color: #333;
}

.form-signin .checkbox input {
    margin-right: 10px;
}

.btn-dark {
    width: 100%;
    padding: 12px;
    border-radius: 8px;
    background-image: linear-gradient(to right top, #33023d, #260d3f, #1a133e, #0e173c, #051937);
    color: #fff;
    border: none;
    font-size: 16px;
    cursor: pointer;
    transition: background 0.3s ease-in-out, transform 0.3s ease-in-out;
}

.btn-dark:hover {
    background-image: linear-gradient(to right top, #33023d, #45163f, #5d1a3e, #771e3b, #901f36);
    color: #fff;
    transform: scale(1.05);
}

@media (max-width: 576px) {
    .form-signin {
        padding: 20px 30px;
    }

    .form-signin .form-heading {
        font-size: 20px;
    }

    .btn-dark {
        font-size: 14px;
    }
}




</style>



<div class="wrapper">
    <div class="container mt-4">
        <form action="/admin/login" method="post" class="form-signin" id="loginForm">
            <h2 class="form-heading text-center">
                Admin Login 
            </h2>
            <input type="email" class="form-control" name="email" id="email" placeholder="Email Address"  autofocus />
            <small id="emailError" style="color: red; display: none;">Please enter a valid email address.</small>

            <input type="password" class="form-control" name="password" id="password" placeholder="Password"  />
            <small id="passwordError" style="color: red; display: none;">Password must be at least 6 characters long.</small>

            <button type="submit" class="btn btn-lg btn-dark btn-block">
                Login
            </button>
        </form>
    </div>
</div>

<script>
    document.getElementById('loginForm').addEventListener('submit',function(event){
        let isValid = true;

        const email =  document.getElementById('email').value;
        const emailError = document.getElementById('emailError');
        const emailPattern =  /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
    

    if(!emailPattern.test(email)){
        emailError.style.display ='block';
        isValid =false;

    }
    else{
        emailError.style.display='none';
    }

    const password = document.getElementById('password').value;
    const passwordError = document.getElementById('passwordError');

    if(password.length<6){
        passwordError.style.display ='block';
        isValid =false;
    }else{
        passwordError.style.display ='none';
    }


    if(!isValid){
        event.preventDefault();
    }

})

</script>